{
  "manifest_version": 3,
  "name": "ZenTab",
  "version": "1.3.0",
  "description": "A OneTab alternative made for the Zen browser.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "downloads",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Send Tabs to ZenTab",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "save-selected": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Send selected tabs to ZenTab"
    },
    "save-all": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Alt+Shift+A"
      },
      "description": "Send all tabs to ZenTab"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zentab@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}